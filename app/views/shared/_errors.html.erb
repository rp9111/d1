<% if object.errors.any? %>
  <script type="text/javascript">
    toastr.options = {
      'closeButton': false,
      'debug': false,
      'positionClass': 'toast-bottom-right',
      'onclick': null,
      'showDuration': '300',
      'hideDuration': '1000',
      'timeOut': '7000',
      'extendedTimeOut': '10000',
      'showEasing': 'swing',
      'hideEasing': 'linear',
      'showMethod': 'fadeIn',
      'hideMethod': 'fadeOut'
    }
    <% object.errors.full_messages.each do |message| %>
   	 toastr['error']('<%= message %>');
    <% end %>
  </script>
<% end %>
