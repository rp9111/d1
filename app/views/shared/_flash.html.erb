<% unless flash.empty? %>
  <script type="text/javascript">
    toastr.options = {
      'closeButton': false,
      'debug': false,
      'positionClass': 'toast-top-center',
      'onclick': null,
      'showDuration': '300',
      'hideDuration': '1000',
      'timeOut': '7000',
      'extendedTimeOut': '10000',
      'showEasing': 'swing',
      'hideEasing': 'linear',
      'showMethod': 'fadeIn',
      'hideMethod': 'fadeOut'
    }
    <% flash.each do |f| %>
    <% type = f[0].to_s.gsub('alert', 'error').gsub('notice', 'info') %>
   	 toastr['<%= type %>']('<%= f[1][0..150] %>');
    <% end %>
  </script>
<% end %>
