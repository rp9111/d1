<div id="bg-overlay" class="bg-img" style="background-image: url(https://s3.amazonaws.com/lvlupdojo/images/hero-01.jpg);"></div>
<div id='signin-panel'>

  <div class="card">
    <div class="card-block">
      <p class="pad-btm">Password reset</p>
      <%= form_tag reset_password_url, method: :put do |f| %>
      	<div class="form-group">
      		<div class="input-group">
      			<div class="input-group-addon"><i class="fa fa-user"></i></div>
            <%= label_tag :email, 'Email address', class: 'sr-only' %>
            <%= email_field_tag :email, '', class: 'form-control', placeholder: 'Email address' %>
          </div>
        </div>
        <div class="form-group text-xs-right">
          <%= submit_tag 'Send instructions', class: 'btn btn-success text-uppercase' %>
        </div>

      <% end %>
    </div>
  </div>

  <div class='row password-management'>
    <div class="pad-ver">
      <%= link_to 'I know my password!', signin_url, class: 'btn-link center' %>
    </div>
  </div>

</div>

<p id="notice"><%= notice %></p>
