<div id="bg-overlay" class="bg-img" style="background-image: url(https://s3.amazonaws.com/lvlupdojo/images/hero-01.jpg);"></div>
<div id='signin-panel'>

  <div class="card">
    <div class="card-block">
      <p class="pad-btm">Sign In to your account</p>
      <%= render 'form' %>
    </div>
  </div>

  <div class='row password-management'>
    <div class="pad-ver">
      <%= link_to 'Forgot password ?', request_reset_url, class: 'btn-link center' %>
    </div>
  </div>

</div>

<p id="notice"><%= notice %></p>
