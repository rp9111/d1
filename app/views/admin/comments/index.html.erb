<p id="notice"><%= notice %></p>

<h1>Comments</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Page</th>
      <th>Content</th>
      <th>Submitted at</th>
      <th>Approved</th>
      <th>Posted at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.user %></td>
        <td><%= comment.page %></td>
        <td><%= comment.content %></td>
        <td><%= comment.submitted_at %></td>
        <td><%= comment.approved %></td>
        <td><%= comment.posted_at %></td>
        <td><%= link_to 'Show', [:admin, comment] %></td>
        <td><%= link_to 'Edit', edit_admin_comment_path(comment) %></td>
        <td><%= link_to 'Destroy', [:admin, comment], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Comment', new_admin_comment_path %>
