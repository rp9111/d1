<div class='modal-body'>
  <%= form_for([:admin, promo]) do |f| %>
    <h4 class='modal-title text-center' id='exampleModalLabel'><%= promo.new_record? ? 'New' : 'Edit' %>
      <span>Promo</span>
      <% unless promo.new_record? %>
        <%= link_to 'Delete',
          [:admin, promo],
          method: :delete,
          class: 'btn btn-sm btn-danger-outline pull-xs-right',
          data: { confirm: "#{promo.name} will be deleted. Are you sure?" } %>
      <% end %>
    </h4>

    <div class='form-group row'>
      <%= f.label :name, class: 'form-control-label col-sm-2' %>
      <div class='col-sm-10'><%= f.text_field :name, class: 'form-control' %></div>
    </div>

    <div class='form-group row'>
      <fieldset class='plan'>
      <%= f.label :course_id, 'Land on', class: 'form-control-label col-sm-2' %>
      <div class='col-sm-10'><%= f.select :course_id, Area.all.map { |i| [i.name, i.id]}, {include_blank: false}, class: 'c-select' %></div>
      </fieldset>
    </div>

    <div class='form-group row'>
      <%= f.label :stripe_coupon, class: 'form-control-label col-sm-2' %>
      <div class='col-sm-10'><%= f.text_field :stripe_coupon, class: 'form-control' %></div>
    </div>

    <div class='form-group row'>
      <%= f.label :hits, class: 'form-control-label col-sm-2' %>
      <div class='col-sm-10'><%= f.text_field :hits, class: 'form-control', readonly: true %></div>
    </div>

    <div class='form-group row'>
      <%= f.label :conversions, class: 'form-control-label col-sm-2' %>
      <div class='col-sm-10'><%= f.text_field :conversions, class: 'form-control', readonly: true %></div>
    </div>

    <div class="form-group row">
      <div class='col-sm-2'>&nbsp;</div>
      <div class='col-sm-10'>
        <div class='checkbox'>
          <label>
            <%= f.check_box :enabled, class: 'form-control' %>
              Enabled
          </label>
        </div>
      </div>
    </div>

    <div class='form-group row'>
      <%= f.label :expires_on, class: 'form-control-label col-sm-2' %>
      <div class='col-sm-10'><%= f.date_select :expires_on, class: 'form-control' %></div>
    </div>

    <div class='form-group row'>
      <%= f.label :message, class: 'form-control-label col-sm-2' %>
      <div class='col-sm-10'><%= f.text_field :message, class: 'form-control' %></div>
    </div>

<% if false %>
    <div class='form-group row'>
      <%= f.label :price, 'Amount', class: 'form-control-label col-sm-2' %>
      <div class='col-sm-10'><%= f.number_field :price, class: 'form-control', step: 'any' %></div>
    </div>

    <div class='form-group row'>
      <%= f.label :interval, class: 'form-control-label col-sm-2' %>
      <div class='col-sm-10'><%= f.select :interval, [['month', 'month'], ['year', 'year'], ['lifetime', 'lifetime']] %></div>
    </div>
  <% end %>
<% end %>
</div>

<div class='modal-footer'>
  <%= link_to 'Close', admin_skus_path, class: 'btn btn-secondary' %>
  <button type='button' class='btn btn-primary' data-form-submit='form'>Save</button>
</div>
