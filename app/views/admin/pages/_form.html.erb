<h1><%= page.new_record? ? 'New Lesson' : 'Edit Lesson' %></h1>

<%= form_for([:admin, page], html: {id: 'editor_form'}) do |f| %>
  <div class='card'>

    <div class='card-block'>
      <% unless page.new_record? %>
        <%= link_to 'Delete',
          [:admin, page],
          method: :delete,
          class: 'btn btn-sm btn-danger-outline pull-xs-right',
          data: { confirm: "#{page.title} will be deleted. Are you sure?" } %>
      <% end %>
    </div>

    <div class='row'>
      <div class='col-sm-8'>
        <%= f.label :content, class: 'sr-only' %>
        <%= f.text_area :content, id: 'editor_content' %>
      </div>

      <div class='col-sm-4'>
        <div class='form-group row'>
          <fieldset class='publish'>
          <%= f.label :area_id, 'Course', class: 'form-control-label col-sm-2' %>
          <div class='col-sm-10'><%= f.collection_select :area_id, Area.all, :id, :name,{}, class: 'c-select' %></div>
          </fieldset>
        </div>

        <div class='form-group row'>
          <%= f.label :title, class: 'form-control-label col-sm-2' %>
          <div class='col-sm-10'><%= f.text_field :title, class: 'form-control' %></div>
        </div>

        <% if false %>
        <div class='form-group row'>
          <%= f.label 'Cover image', class: 'form-control-label col-sm-2' %>
          <div class='col-sm-10'><%= f.text_field :cover, class: 'form-control' %></div>
        </div>
        <% end %>

        <div class='form-group row'>
          <%= f.label :permalink, class: 'form-control-label col-sm-2' %>
          <div class='col-sm-10'><%= f.text_field :permalink, class: 'form-control' %></div>
        </div>

        <div class='form-group row'>
          <%= f.label :classes, class: 'form-control-label col-sm-2' %>
          <div class='col-sm-10'><%= f.text_field :classes, class: 'form-control' %></div>
        </div>

        <div class='form-group row'>
          <%= f.label :cover, class: 'form-control-label col-sm-2' %>
          <div class='col-sm-10'><%= f.text_field :cover, class: 'form-control' %></div>
        </div>

        <%= f.submit 'Save', class: 'btn btn-primary btn-block' %>

      </div>
    </div>
  </div>

<% end %>
